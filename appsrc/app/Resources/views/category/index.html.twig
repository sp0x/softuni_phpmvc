{% extends ':shared:layout.html.twig' %}
{% block title %}xCart: Categories{% endblock %}
{% block body %}
    <h1>Categories list</h1>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr class="row">
                    <th>#</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr class="row">
                    <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('category_show', { 'id': category.id }) }}">Show</a> |
                        <a href="{{ path('category_edit', { 'id': category.id }) }}">Edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <ul>
        <li>
            <a class="btn btn-primary" href="{{ path('category_new') }}">Create a new category</a>
        </li>
    </ul>
{% endblock %}
