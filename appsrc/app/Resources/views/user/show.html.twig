{% extends ':shared:layout.html.twig' %}
{% block title %}xCart: User {{ user.username }}{% endblock %}
{% block body %}
    <h1>User</h1>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{% if user.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Isbanned</th>
                <td>{% if user.isBanned %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Cash</th>
                <td>{{ user.cash }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_list') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
