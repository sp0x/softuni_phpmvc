{% extends 'base.html.twig' %}

{% block body %}
    <h1>Video</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Videoid</th>
                <td>{{ video.videoId }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Config</th>
                <td>{{ video.config }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description }}</td>
            </tr>
            <tr>
                <th>Isplaylist</th>
                <td>{% if video.isPlaylist %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ video.image }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if video.created %}{{ video.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if video.updated %}{{ video.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ video.duration }}</td>
            </tr>
            <tr>
                <th>Available</th>
                <td>{% if video.available %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ video.author }}</td>
            </tr>
            <tr>
                <th>Uploaddate</th>
                <td>{{ video.uploadDate }}</td>
            </tr>
            <tr>
                <th>Items</th>
                <td>{{ video.items }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('video_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('video_edit', { 'id': video.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
