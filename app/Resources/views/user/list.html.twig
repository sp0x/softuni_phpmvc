{% extends ':shared:layout.html.twig' %}
{% block title %}xCart: Users{% endblock %}
{% block body %}
    <h1>Users list</h1>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr class="row">
                    <th>Id</th>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Active</th>
                    <th>Banned</th>
                    <th>Cash</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="row">
                    <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.role }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.password }}</td>
                    <td>{% if user.isActive %}Yes{% else %}No{% endif %}</td>
                    <td>{% if user.isBanned %}Yes{% else %}No{% endif %}</td>
                    <td>{{ user.cash }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
    </table>
    </div>
    
{% endblock %}
