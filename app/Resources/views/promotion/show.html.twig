{% extends ':shared:layout.html.twig' %}

{% block body %}
    <a href="{{ path('promotion_index') }}">Back to the list</a>

    <h1>Promotion</h1>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promotion.id }}</td>
            </tr>
            {% if promotion.product %}
            <tr>
                <th>Product</th>
                <td>#{{ promotion.productId }} - {{ promotion.product.name }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>General</th>
                <td>{% if promotion.isGeneral %}Yes{% else %}No{% endif %}</td>
            </tr>
            {% if promotion.category %}
            <tr>
                <th>Category</th>
                <td>{{ promotion.category.name }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Start</th>
                <td>{% if promotion.start %}{{ promotion.start|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Ends</th>
                <td>{% if promotion.ends %}{{ promotion.ends|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            {% if promotion.criteria %}
            <tr>
                <th>Criteria</th>
                <td>{{ promotion.criteria }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Discount</th>
                <td>    {{ promotion.discount }}%</td>
            </tr>
        </tbody>
    </table>

    {{ form_start(delete_form) }}
        <a class="btn btn-primary" href="{{ path('promotion_edit', { 'id': promotion.id }) }}">Edit</a>
        <input class="btn btn-danger" type="submit" value="Delete">
    {{ form_end(delete_form) }}
{% endblock %}
