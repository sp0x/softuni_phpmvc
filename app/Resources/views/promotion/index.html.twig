{% extends ':shared:layout.html.twig' %}

{% block body %}
    <h1>Promotions list</h1>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr class="row">
                <th>Id</th>
                <th>#Product</th>
                <th>General</th>
                <th>Category</th>
                <th>Start</th>
                <th>Ends</th>
                <th>Criteria</th>
                <th>Discount %</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr class="row">
                <td><a href="{{ path('promotion_show', { 'id': promotion.id }) }}">{{ promotion.id }}</a></td>
                <td>{{ promotion.productId }}</td>
                <td>{% if promotion.isGeneral %}Yes{% else %}No{% endif %}</td>
                <td>{% if promotion.category %}{{ promotion.category.name }}{% else %}{% endif %}</td>
                <td>{% if promotion.start %}{{ promotion.start|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if promotion.ends %}{{ promotion.ends|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ promotion.criteria }}</td>
                <td>{{ promotion.discount }} %</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('promotion_show', { 'id': promotion.id }) }}">Show</a>
                        </li>
                        <li>
                            <a href="{{ path('promotion_edit', { 'id': promotion.id }) }}">Edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <ul>
        <li>
            <a class="btn btn-primary" href="{{ path('promotion_new') }}">Create a new promotion</a>
        </li>
    </ul>
{% endblock %}
